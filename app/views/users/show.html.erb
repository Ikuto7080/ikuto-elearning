<% provide(:title, @user.name) %>
<% if current_user?(@user) %>
<div class="container main mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h1><strong>Dashboard</strong></h1>
                </div>
                <div class="col-md-4">
                    <%= link_to "Edit",edit_user_path(@user)%>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12 center-block mb-5">
                    <%= gravatar_for @user %>
                    <h1 class="mt-2"><strong><%= @user.name %></strong></h1>
                    <h4>
                    <i class="fa fa-envelop" aria-hidden="true"></i>
                    <%= @user.email %>
                    </h4>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-7 mb-5">
            <div class="container balloon1-left mb-5">
                <h2 class="mt-2">
                    <i class="fa fa-book"></i>
                    <strong>Recent Activity</strong>
                </h2>
                <hr>
                <div class="media ml-3">
                    <div class="img m-2 align-self-center">
                        <%= gravatar_for @user %>
                    </div>
                    <div class="media-body m-2 pr-5">
                        <% if @activities.any? %>
                            <p>
                                <%= current_user.name %>
                                <ol class="activities">
                                    <%= render @activities %>
                                </ol>
                                <%= will_paginate @activities %>
                            </p>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <aside class="span">
        <section>
            <h1>
                
                
            </h1>
        </section>
    </aside>
</div>
<% else %>
    <div class="container main mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 mt-3">
                <div class="row">
                    <div class="col-md-8">
                        <h1><strong>Profile</strong></h1>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12 center-block mb-5">
                        <%= gravatar_for @user %>
                        <h1 class="mt-2"><strong><%= @user.name %></strong></h1>
                        <h4>
                        <i class="fa fa-envelop" aria-hidden="true"></i>
                        <%= @user.email %>
                        </h4>
                        <div class="row">
                            <div class="col-md-6 center-block mt-2 mb-1">
                                <%= render 'shared/stats' %>
                            </div>
                            <div class="col-md-12">
                                <%= render 'follow_form' if logged_in? %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-7 mb-5 ml-4">
                <div class="container balloon1-left mb-5">
                    <h2 class="mt-2">
                        <i class="fa fa-book"></i>
                        <strong>Recent Activity</strong>
                    </h2>
                    <hr>
                    <div class="media ml-3">
                        <div class="img m-2 align-self-center">
                            <%= gravatar_for @user %>
                        </div>
                        <div class="media-body m-2 pr-5">
                            <% if @activities.any? %>
                                <p>
                                    <%= current_user.name %>
                                    <ol class="activities">
                                        <%= render @activities %>
                                    </ol>
                                    <%= will_paginate @activities %>
                                </p>
                            <% else %>
                               <h3>No activities</h3>
                            <% end %>
                        </div>
                    </div>
                        <%= will_paginate @activities %>
                    </div>
                </div> <%# end of container %>
            </div> <%# end of col-md-7%>
        </div> <%#end of row %>
    </div> <%# end of container%>
    <div class="row">
        <aside class="span">
            <section>
                <h1>
                    
                    
                </h1>
            </section>
        </aside>
    </div>
<% end %>