<%= form_for([@category, @lesson, @answer]) do |f| %>
    <div class="col-md-1"></div>
        <div class="col-md-3 ml-5 mr-5">
            <div class="text-center">
                <%= hidden_field_tag :page, @words.next_page %>
                <div class="field">
                    <td class="col-md-6">
                        <% @words.each do |word| %>
                        <%= hidden_field_tag :word_id, word.id %>
                        <%= f.label word.name %>
                    </td>
                        <div class="col-md-1"></div>
                            <td class="col=md-6">
                                <h3>
                                    <strong>Choices</strong>
                                </h3>
                                <% word.choices.each do |choice| %>
                                    <%= hidden_field_tag :choice_id, choice.id %>
                                    <div class="btn-group pull-right">
                                        <%= f.submit choice.content, class:"btn btn-lg mt-5 mr-3"%>
                                    </div>
                                <% end %>
                            </td>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
<%= hidden_field_tag :page, @words.next_page %>


