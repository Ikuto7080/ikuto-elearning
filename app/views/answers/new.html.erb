<%  provide(:title, "Lessons") %>
<div class="container main mt-5">
    <div class="row justify-content-center">
        <div class="card shadow col-md-8">
            <div class="card-body">
                <h1>Lesson:<%= @category.title %></h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th colspan="4">
                                <div class="page_info">
                                    <%= page_entries_info @words %>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="row">
                        <tr>
                            <%= render 'form' %>
                        </tr>
                    </tbody>
                </table>
                <%= will_paginate @words %>
            </div>
        </div>
    </div>
</div>
