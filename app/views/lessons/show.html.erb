<div class="container main mt-5">
    <div class="row">
        <div class="col-md-10 mt-3">
            <div class="row">
                <div class="col-md-12">
                    <h1>
                        <strong>Result: <%= @category.title %></strong>
                    </h1>
                    <h3 class="pt-3 text-muted">
                        <h1>Users information later</h1>
                    </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-2 center-block alert-danger pt-1 mb-1">
                <h2 class="text-center">Score
                    <hr>
                    
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-responsive mb-5">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Words</th>
                            <th>Your answers</th>
                            <th>Correct answers</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @answers.each do |answer| %>
                            <tr>
                                <td class="answer_judge" style="width: 210px;">
                                    <h3 class="text-center">
                                        <i class="fas fa-award"></i>
                                    </h3>
                                </td>
                                <td style="width: 400px;">
                                    <h3><%= answer.word.name%></h3>
                                </td>
                                <td style="width: 400px;">
                                    <h3><%= answer.choice.content %></h3>
                                </td>
                                <td style="width: 400px;"><h3><%= answer.word.word_choices %></h3></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>