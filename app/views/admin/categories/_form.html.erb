<%= form_for [:admin, @category] do |f| %>
<%= render 'error_messages' %>
<div class="new_category row">
    <div class="col-md-12 center-block">
        <div class="field">
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </div>

        <div class="field">
            <%= f.label :description %><br>
            <%= f.text_area :description %>
        </div>

        <div class="action">
            <%= f.submit %>
        </div>
    </div>    
</div>
<% end %>