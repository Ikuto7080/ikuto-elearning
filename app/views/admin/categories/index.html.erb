<div class="container main mt-5">
    <div class="row">
        <div class="col-md-3 mt-3 mb-3">
        <h1>
        <strong>Categories: Admin</strong>
        </h1>
        </div>
        <div class="col-md-2 mt-3 mb-3">
            <%= link_to "ADD CATEGORY", new_admin_category_path, class:"btn btn-info btn-log" %> 
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 center-block mb-5"> 
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th style="width: 250px;">Title</th>
                    <th style="width: 600px;">Description</th>
                    <th style="width: 250px;">Action</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                <tr>
                    <td style="width: 250px;"><%= link_to "category.title", "#"%></td>
                    <td style="width: 500px;"><%= link_to "category.description", "#"%></td>
                    <td style="width: 250px;">
                        <h3 class="block">
                            <%= link_to "Show", admin_category_path(category)%>
                        </h3>
                        <h3 class="block">
                            <%= link_to "Edit", edit_admin_category_path(category) %>
                        </h3>
                        <h3 class="block">
                            <%= link_to "Delete",
                                        method: :delete,
                                        data: { confirm: "Are you sure?" }
                            %>
                        </h3>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>
