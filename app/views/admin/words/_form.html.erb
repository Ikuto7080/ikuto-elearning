<%= form_for [:admin, :category, @word] do |f| %>
    

        <div class="row">
            <div class="field">
                <%= f.label :word %><br>
                <%= f.text_field :word %>
            </div>

            <span class="btn-group pull-right">
                <%= f.submit %>
                <%#= link_to "Cancel", admin_category_word_path(@word),  class:"btn btn-outline-warning btn-lg mt-3 ml-3" %>
            </span>
        </div>   
    </div>
<% end %>