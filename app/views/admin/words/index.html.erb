<div class="container main mt-5">
    <div class="row">
        <div class="col-md-4 mt-3 mb-3">
            <h1>
                <strong><%= @category.title %>Words:Admin</strong>
            </h1>
        </div>
        <div class="cal-mi-2 mt-3 mb-3">
            <%= link_to "New Word", new_admin_category_word_path, class:"btn btn-info btn-lg"%>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 center-block">
            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Words</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                <% @words.each do |word| %>
                        <tr>
                            <td style="width: 800px;">
                                <h3><%= word.name%></h3>
                            </td>
                            <td style="width: 300px;">
                                <h4 class="pull-left mr-3">
                                    <%= link_to "Edit Word", edit_admin_category_word_path(@category, word)%>
                                </h4>
                                <h4 class="pull-left">
                                    <%= link_to "Del. Word",
                                        admin_category_word_path(@category, word),
                                        method: :delete,
                                        data: { confirm: "Are you sure" }
                                    %>
                                </h4>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>

